)INIT
VGET ZSCROLL PROFILE
.ATTR(FLD1) = 'COLOUR(WHITE)'
.AUTOSEL = NO
)ENDINIT

)REINIT
.AUTOSEL =YES
)ENDREINIT

)PROC
VPUT ZSCROLL PROFILE

--VER (&SEL,LIST,D,R,RO,G)

IF (&SEL NE &Z)
   IF (&SEL NE D,R,RO,G)
      .ATTR(SEL) = 'COLOUR(RED) INTENSE(HIGH)'
      .CURSOR    = SEL
      .MSG       = PSYS01C
      EXIT
)ENDPROC
